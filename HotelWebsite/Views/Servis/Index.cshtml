@model IEnumerable<HotelWebsite.Models.Servisler>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml";
}

<h4>Odalar</h4>
<p>
    @Html.ActionLink("Servis Oluştur", "Yeni", null, new { @class = "btn btn-success" })
</p>

<table class="table-striped alert-danger col-md-12">
    <tr>
        <th>
            @Html.DisplayNameFor(Model => Model.ad)
        </th>
        <th>
            @Html.DisplayNameFor(Model => Model.ucret)
        </th>
        <th>
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(Model => item.ad)
            </td>
            <td>
                @Html.DisplayFor(Model => item.ucret)
            </td>
            <td>
                @Html.ActionLink("Düzenle", "Duzenle", new { id = item.servisNo }, new { @class = "btn btn-warning" })
                @Html.ActionLink("Sil", "Sil", new { id = item.servisNo }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }
</table>
